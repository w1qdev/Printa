generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Модель пользователя
model User {
  id             String    @id @default(uuid())
  email          String    @unique
  password       String
  role           UserRole  @default(CUSTOMER)
  firstName      String?
  lastName       String?
  phone          String?
  telegramChatId String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Связи
  ordersAsCustomer Order[] @relation("CustomerOrders")
  ordersAsExecutor Order[] @relation("ExecutorOrders")

  @@map("users")
}

enum UserRole {
  CUSTOMER
  EXECUTOR
  ADMIN
}

// Модель заказа
model Order {
  id            String      @id @default(uuid())
  title         String
  description   String
  budget        Decimal     @db.Decimal(10, 2)
  status        OrderStatus @default(DRAFT)

  customerId    String
  customer      User        @relation("CustomerOrders", fields: [customerId], references: [id])

  executorId    String?
  executor      User?       @relation("ExecutorOrders", fields: [executorId], references: [id])

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Связи
  images        OrderImage[]
  payments      Payment[]

  @@map("orders")
}

enum OrderStatus {
  DRAFT
  CREATED
  PAID
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CLOSED
  CANCELLED
}

// Модель изображения заказа
model OrderImage {
  id           String   @id @default(uuid())
  orderId      String
  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  thumbnailUrl String
  mediumUrl    String
  fullUrl      String

  width        Int
  height       Int

  createdAt    DateTime @default(now())

  @@map("order_images")
}

// Модель платежа
model Payment {
  id              String        @id @default(uuid())
  orderId         String
  order           Order         @relation(fields: [orderId], references: [id])

  amount          Decimal       @db.Decimal(10, 2)
  currency        String        @default("RUB")
  status          PaymentStatus @default(PENDING)
  provider        String        @default("yukassa")

  // Данные от провайдера
  providerPaymentId String?     @unique
  providerData      Json?

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("payments")
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  CANCELLED
  REFUNDED
}

// Product
model Product {
  id           String   @id @default(uuid())
  name         String
  description  String?
  price        Decimal  @db.Decimal(10, 2)
  currency     String   @default("RUB")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("products")
}
