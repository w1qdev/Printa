# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/marketplace?schema=public"

# JWT
JWT_SECRET=your-super-secret-key
JWT_EXPIRES_IN=7d

# ЮKassa
YUKASSA_SHOP_ID=your-shop-id
YUKASSA_SECRET_KEY=your-secret-key
YUKASSA_WEBHOOK_URL=https://your-domain.com/api/webhooks/yukassa

# Telegram
TELEGRAM_BOT_TOKEN=your-bot-token

# S3 Storage (опционально)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=marketplace-files
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key